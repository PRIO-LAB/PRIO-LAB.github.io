			a( href='#' ).social-icon.icon.icon-md.icon-link.icon-base.mdi-facebook
			a( href='#' ).social-icon.icon.icon-md.icon-link.icon-base.mdi-twitter
			a( href='#' ).social-icon.icon.icon-md.icon-link.icon-base.mdi-instagram